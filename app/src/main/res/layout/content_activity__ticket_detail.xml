<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activity_TicketDetail"
    tools:showIn="@layout/activity__ticket_detail">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            android:id="@+id/textVvew_ticketdata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:text="Datum: dd.mm.yyyy |Raum: CXXX | PC 01" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:text="Fehlerbeschreibung:" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="297dp">

        <MultiAutoCompleteTextView
            android:id="@+id/multiAutoCompleteTextView_ErrorDescription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:gravity="top"
            android:paddingLeft="8dp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:text="Status" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="46dp">

        <Spinner
            android:id="@+id/spinner_status"
            android:layout_width="368dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/imageView_statuscolor"
            android:layout_width="43dp"
            android:layout_height="24dp"
            android:layout_gravity="left"
            android:foregroundGravity="right" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:text="Priorität" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="106dp">

        <Spinner
            android:id="@+id/spinner_prio"
            android:layout_width="367dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/imageView_priocolor"
            android:layout_width="43dp"
            android:layout_height="24dp"
            android:layout_gravity="left"
            android:foregroundGravity="right" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_saveticket"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Übernehmen" />
    </TableRow>

</LinearLayout>